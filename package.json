{
  "name": "dixit.io",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/jest": "24.0.19",
    "@types/node": "12.11.1",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "@types/react-resize-detector": "^4.2.0",
    "boardgame.io": "^0.35.1",
    "postcss-cli": "^6.1.3",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-resize-detector": "^4.2.1",
    "react-scripts": "3.2.0",
    "tailwindcss": "^1.1.2",
    "typescript": "3.6.4"
  },
  "scripts": {
    "start": "yarn app:start & nodemon -- --config nodemon.json",
    "build": "yarn app:build && yarn server:build",
    "app:start": "postcss src/tailwind.src.css -o src/tailwind.css && PORT=8200 react-scripts start",
    "app:build": "postcss src/tailwind.src.css -o src/tailwind.css --env production && react-scripts build",
    "server:start": "node build/server/server.js",
    "server:build": "tsc --project tsconfig.server.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "nodemon": "^1.19.4"
  }
}
